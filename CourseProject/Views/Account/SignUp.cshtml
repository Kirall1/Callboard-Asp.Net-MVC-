@model SignUpModel;
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <title>Registration</title>
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center navbar-brand" style="font-size: 24px;">Registration</h2>
        <div class="d-flex justify-content-center">
            <form asp-action="SignUp" method="post" class="text-center account-form" id="sign_up_form">
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Phone" type="tel" name="phone" id="phone" class="form-control"
                            placeholder="Enter phone number">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Name" type="text" name="name" id="name" class="form-control"
                            placeholder="Enter login">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Password" type="password" name="password" id="password" class="form-control"
                            placeholder="Enter password">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="ConfirmPassword" type="password" name="confirm_password" id="confirm_password"
                            class="form-control" placeholder="Confirm password">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 15px;">Sign Up</button>
            </form>
        </div>
        <div asp-validation-summary="All"></div>
    </div>
    <script src="sign-up.js" type="module"> </script>
</body>

</html>
