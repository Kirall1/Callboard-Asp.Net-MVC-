@model SignUpModel;
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <title>Регистрация</title>
    @* <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/styles.css" /> *@
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center navbar-brand" style="font-size: 24px;">Регистрация</h2>
        <div class="d-flex justify-content-center">
            <form asp-action="SignUp" method="post" class="text-center account-form" id="sign_up_form">
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Phone" type="tel" name="phone" id="phone" class="form-control"
                            placeholder="Введите номер телефона">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Name" type="text" name="name" id="name" class="form-control"
                            placeholder="Введите логин">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="Password" type="password" name="password" id="password" class="form-control"
                            placeholder="Введите пароль">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-center">
                        <input asp-for="ConfirmPassword" type="password" name="confirm_password" id="confirm_password"
                            class="form-control" placeholder="Подтвердите пароль">
                    </div>
                    <div class="d-flex justify-content-left">
                        <p><br></p>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 15px;">Зарегистрироваться</button>
            </form>
        </div>
    </div>
    <script src="sign-up.js" type="module"> </script>
    <script src="account.js" type="module"></script>
</body>

</html>
